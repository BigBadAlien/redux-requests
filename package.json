{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "cover": "nyc --reporter=lcov --reporter=text lerna run test:cover",
    "report": "nyc report",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "devDependencies": {
    "coveralls": "3.0.0",
    "lerna": "2.5.1",
    "nyc": "11.4.1"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
